<view class="userpost"><view class="header" style="{{'height:'+(CustomBar+'px')+';'}}"><view class="cu-bar bg-white" style="{{'height:'+(CustomBar+'px')+';'+('padding-top:'+(StatusBar+'px')+';')}}"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-back"></text></view><view class="content text-bold" style="{{'top:'+(StatusBar+'px')+';'}}">文章管理</view></view></view><view style="{{'padding:'+(NavBar+'px 10px 0px 10px')+';'}}"></view><view class="data-box"><view class="cu-bar bg-white search"><view class="search-form round"><text class="cuIcon-search"></text><input type="text" placeholder="输入搜索关键字" data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]],['searchTag',['$event']]]]]}}" value="{{searchText}}" bindinput="__e"/></view></view><view class="search-type grid col-2"><view data-event-opts="{{[['tap',[['toType',['waiting']]]]]}}" class="{{['search-type-box',type=='waiting'?'active':'']}}" bindtap="__e"><text>待审核</text></view><view data-event-opts="{{[['tap',[['toType',['publish']]]]]}}" class="{{['search-type-box',type=='publish'?'active':'']}}" bindtap="__e"><text>已发布</text></view></view><block qq:if="{{contentsList.length==0}}"><view class="no-data">暂时没有数据</view></block><view class="cu-card article no-card"><block qq:for="{{$root.l0}}" qq:for-item="item" qq:for-index="index"><view class="cu-item shadow"><view class="content"><view class="desc"><view class="text-content">{{item.$orig.title}}</view><view><block qq:if="{{item.$orig.status=='publish'}}"><view class="cu-tag bg-green light sm round">已发布</view></block><block qq:if="{{item.$orig.status=='waiting'}}"><view class="cu-tag bg-orange light sm round">待审核</view></block><view class="cu-tag data-time">{{item.m0}}</view></view></view></view><view class="manage-btn"><block qq:if="{{item.$orig.status=='waiting'}}"><text data-event-opts="{{[['tap',[['toAudit',['$0'],[[['contentsList','',index,'cid']]]]]]]}}" class="cu-btn text-yellow radius" bindtap="__e">快捷审核</text></block><text data-event-opts="{{[['tap',[['toEdit',['$0'],[[['contentsList','',index,'cid']]]]]]]}}" class="cu-btn text-blue radius" bindtap="__e">编辑</text><text data-event-opts="{{[['tap',[['toDelete',['$0'],[[['contentsList','',index,'cid']]]]]]]}}" class="cu-btn text-red radius" bindtap="__e">删除</text></view></view></block><block qq:if="{{contentsList.length>0}}"><view data-event-opts="{{[['tap',[['loadMore',['$event']]]]]}}" class="load-more" bindtap="__e"><text>{{moreText}}</text></view></block></view></view><block qq:if="{{isLoading==0}}"><view class="loading"><view class="loading-main"><image src="../../static/loading.gif"></image></view></view></block></view>